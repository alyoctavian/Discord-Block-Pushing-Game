package PointsSystem;

import java.util.HashMap;
import java.util.Random;
import java.util.Timer;
import java.util.TimerTask;

import net.dv8tion.jda.api.entities.Member;
import net.dv8tion.jda.api.events.message.guild.GuildMessageReceivedEvent;
import net.dv8tion.jda.api.hooks.ListenerAdapter;

public class PointsSystem extends ListenerAdapter{
	
	HashMap<Member, Integer> PlayerPoints = new HashMap<>();
	HashMap<Member, Integer> PlayerTimer = new HashMap<>();
	
	public void onGuildMessageReceived(GuildMessageReceivedEvent event)
	{
		
	}
	
	private int GetPlayerPoints(Member member)
	{
		return PlayerPoints.get(member);
	}
	
	private void SetPlayerPoints(Member member, int points)
	{
		PlayerPoints.put(member, points);
	}
	
	private int GetPlayerTimer(Member member)
	{
		return PlayerTimer.get(member);
	}
	
	private void SetPlayerTimer(Member member, int new_time)
	{
		PlayerTimer.put(member, new_time);
	}
	
	public void RandXP(Member member)
	{
		Random numRandom = new Random();
		
		SetPlayerPoints(member, GetPlayerPoints(member) + numRandom.nextInt(26));
	}
	
	public void StartTimer()
	{
		Timer timer = new Timer();
		
		TimerTask task = new TimerTask() {
			
			@Override
			public void run() {
				// TODO Auto-generated method stub
				
			}
		};
		
		timer.schedule(task, 1000, 1000);
	}
}
